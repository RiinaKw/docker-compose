root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[*.{html,tpl,blade.php,pug,vue}]
indent_size = 2

[*.{css,scss}]
indent_size = 2

[*.{js,json}]
indent_size = 4

[*.conf]
indent_style = tab
indent_size = 2
